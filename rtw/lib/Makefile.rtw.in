CC = @CC@
AR = @AR@
RTAI_FLAGS = @RTAI_FLAGS@
MATLAB_ROOT = @MATLAB_ROOT@

ARFLAGS = crus
TGT = librtw.a

ifeq ($V,)
cc = @echo -e "  CC\t$@"; $(CC)
ar = @echo -e "  AR\t$@"; $(AR)
else
cc = $(CC)
ar = $(AR)
endif

RTW_CFLAGS = \
        -I$(MATLAB_ROOT)/simulink/include \
        -I$(MATLAB_ROOT)/extern/include \
        -I$(MATLAB_ROOT)/rtw/c/src \
        -I$(MATLAB_ROOT)/rtw/c/src/ext_mode/common \
        -DRT -I.

# Make a list of all *.c files int $(MATLAB_ROOT)/rtw/c/libsrc
RTW_LIB_DIR = $(MATLAB_ROOT)/rtw/c/libsrc
SRCS := $(wildcard $(RTW_LIB_DIR)/*.c)
OBJS := $(patsubst %.c,%.o,$(notdir $(SRCS)))

include @top_builddir@/tools/rt_kernel/kflags.mk
KERNEL_CFLAGS = $(filter-out -Wundef, $(KERNEL_OPTS))

$(TGT): $(OBJS)
	$(ar) $(ARFLAGS) $@ $^

.INTERMEDIATE: $(OBJS)
$(OBJS): %.o: $(RTW_LIB_DIR)/%.c
	$(cc) $(RTW_CFLAGS) $(KERNEL_CFLAGS) $(RTAI_FLAGS) -c -o $@ $<

