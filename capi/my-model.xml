<?xml version="1.0"?>
<application>
     xmlns:xinclude="http://www.w3.org/2003/XInclude">
  <description>My HandCoded C Model</description>
  <version>11</version>
  <parameters max_overruns="5" stacksize="2048" photo_decimation="1" buffer_time="10"/>

  <!-- xinclude:include href="system.xml"/ -->

  <!-- Enter the base tick in microseconds for the main task. If you
       have subtasks, add them inside <task> with the according decimation -->
  <task basetick="1000">
      <subtask decimation="100"/>
  </task>

  <!-- 
  Extra includes that you require. Most significantly it is used to declare
  structures that are referenced by <cstruct>

  <include>
    <file>localinclude.h</file>         = local files
    <system>stdio.h</system>            = system files
  </include>
  -->
  <include>
    <file>localinclude.h</file>
  </include>

  <refsystem name="subsysname">
    <subsystem name="subsystem_with_parameter">
      <parameter name="scalar_param" datatype="double_T"/>
    </subsystem>
    <subsystem name="subsystem_with_signal">
      <signal name="pressure" datatype="double_T"/>
    </subsystem>
    <subsystem name="subsystem_with_signal_and_parameter">
      <signal name="pressure" datatype="double_T"/>
      <parameter name="scalar_param" datatype="double_T"/>
    </subsystem>
    <parameter name="scalar_param" datatype="double_T"/>
  </refsystem>
  
  <data>
    <subsystem name="meters">
      <signal name="pressure" datatype="double_T" sampleTimeIndex="1" alias="X"/>
    <subsystem name="meter1">
      <signal name="pressure" datatype="double_T" sampleTimeIndex="0" alias="X">
       <dim value="10"/>
       <dim value="20"/>
       <dim value="30"/>
       <meta>hide="0"</meta>
      </signal>
      <parameter name="matrix_param" datatype="double_T">
       <dim value="2"/>
       <dim value="4"/>
       <value>
         <value>
           <value>1</value>
           <value>2</value>
           <value>3</value>
           <value>4</value>
         </value>
         <value>
           <value>5</value>
           <value>6</value>
           <value>7</value>
           <value>8</value>
         </value>
       </value>
      </parameter>
      <reference name="reference" value="subsysname"/>
    </subsystem>
    </subsystem>
  </data>
</application>
