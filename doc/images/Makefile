FIGS = \
	c-api.fig \
	overview.fig

PDFS = $(FIGS:.fig=.pdf)

pdfs: $(PDFS)

%.pdf: %.fig
	fig2dev -L pdf -z A4 -p xxx -c $< $@	

clean:
	@rm -rv $(PDFS)

